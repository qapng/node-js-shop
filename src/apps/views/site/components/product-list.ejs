<div class="product-list card-deck">
    <% for (let p of products) { %>
    <div class="product-item card text-center">
        <a href="/product.<%= p._id %>"><img src="/static/images/products/<%= p.prd_image %>"></a>
        <h4><a href="/product.<%= p._id %>"><%= p.prd_name %></a></h4>
        <p>Giá Bán: <span><%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(p.prd_price) %></span></p>
    </div>
    <% } %>
</div>